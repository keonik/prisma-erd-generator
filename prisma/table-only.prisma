// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator erd {
    provider  = "node ./dist/src/index.js"
    output    = "../__tests__/TableOnly.svg"
    theme     = "forest"
    tableOnly = true
}

model Booking {
    id           Int      @id @default(autoincrement())
    inviteeEmail String
    startDateUTC DateTime
    cancelCode   String
    events       Event[]
}

model Event {
    id        Int       @id @default(autoincrement())
    name      String
    startDate DateTime
    bookings  Booking[]
    status    Status    @default(PENDING)
}

enum Status {
    PENDING
    CANCELLED
    CONFIRMED
}
