{
  "compilerOptions": {
    /* Base Options: */
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "preserve",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "composite": true,
    "noEmit": true,
    /* If your code doesn't run in the DOM: */
    "lib": ["es2022"],
    "types": [""],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src"]
}
