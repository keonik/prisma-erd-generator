{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2019",
    "baseUrl": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2019"],
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["__tests__", "node_modules", "dist"]
}
